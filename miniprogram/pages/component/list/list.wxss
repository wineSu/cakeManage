.listCont{
  display: flex;
  justify-content: space-between;
  align-content: center;
  flex-wrap: wrap;
  padding:16rpx 20rpx 0;
}
.list{
  width: 344rpx;
  height: 454rpx;
  margin-bottom:26rpx;
  border-radius: 5px;
  overflow: hidden;
  background: #fff;
  position: relative;
}
.relative{
  position: relative;
}
.list .image{
  width: 344rpx;
  height: 344rpx;
}
.list .text_c{
  text-align: center;
  color: #fe3535;
  padding-top: 50rpx;
}

.list .absolute{
  position: absolute;
  bottom:-30rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 250rpx;
  height: 76rpx;
  line-height: 76rpx;
  border: 1px solid #e7e7e7;
  text-align: center;
  color: #AA8764;
  background: #fff;
}

.list .text_c text,.foods{
  color: #333!important;
}
.listadd{
  border: 1rpx dashed #888;
  box-sizing:border-box;
  font-size: 30rpx;
  color: #888;
  text-align: center;
}
.listadd .v1{
  font-size: 90rpx;
  font-weight: 600;
  padding-top: 150rpx;
}
.del{
  position: absolute;
  right:20rpx;
  top:20rpx;
  width: 50rpx;
  height: 50rpx;
}