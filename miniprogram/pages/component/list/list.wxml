<view class='listCont'>
  <view class=' list' wx:for="{{listsData}}" wx:key="{{item.id}}" data-id="{{item.id}}" data-type="{{item.type}}" bindtap='goedit'>
    <view class='relative'>
      <image class='image' src='{{item.url}}'></image>
      <view class='absolute'>{{item.name}}</view>
    </view>
    <view class='text_c foods' wx:if="{{item.desc}}">{{item.desc}}</view>
    <view class='text_c' wx:else>￥{{item.price}}/<text>{{item.size||item.weight}}{{item.size?'寸':'g'}}</text></view>
    <image class='del' src='../../../i/del.png'></image>
  </view>
  <view class='listadd text_c list' bindtap='add' data-type="{{listsType}}">
    <view class='v1'>+</view>
    <view>添加</view>
  </view>
</view>